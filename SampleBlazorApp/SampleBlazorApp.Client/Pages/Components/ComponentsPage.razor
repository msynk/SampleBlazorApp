<h2>Componenets</h2>

<hr />

<OneWayBinding ParameterValue="this is the ParameterValue from parent!"></OneWayBinding>

<hr />

<div>counter: @count</div>
<Event OnClick="() => count++"
       OnClick2="v => count += v"></Event>

<hr />

<div>Parent Value3: @Value3</div>
<div>Parent Value4: @Value4</div>
<TwoWayBinding Value3=Value3
               @bind-Value4=Value4></TwoWayBinding>

<hr />

<CascadingValue Name="SecondValue" Value="CascadingValue2">
    <CascadingValue Name="FirstValue" Value="CascadingValue1">
        <CascadingValueComp></CascadingValueComp>
    </CascadingValue>
</CascadingValue>

<hr />

<CascadingValue Value="CascadingClass1">
    <CascadingValueComp3></CascadingValueComp3>
</CascadingValue>

<hr />

<CascadingValue Value="CascadingClass2">
    <CascadingValueComp3></CascadingValueComp3>
</CascadingValue>


<hr />

<CascadingValue Name="FirstValue" Value="CascadingValue1">
    <CascadingValue Name="SecondValue" Value="CascadingValue2">
        <OverrideCascadingValueComp></OverrideCascadingValueComp>
    </CascadingValue>
</CascadingValue>

<hr />

