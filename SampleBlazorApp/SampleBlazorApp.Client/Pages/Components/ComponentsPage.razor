@code{
    private int count = 0;
    private string Value3 = "initial Value3";
    private string Value4 = "initial Value4";

    private string CascadingValue1 = "this is a cascading value";
    private int CascadingValue2 = 11;

    private CascadingClass CascadingClass1 = new CascadingClass { Prop1 = "Prop1", Prop2 = 2 };
    private CascadingClass CascadingClass2 = new CascadingClass { Prop1 = "Prop12", Prop2 = 22 };
